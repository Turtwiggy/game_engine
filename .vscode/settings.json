{
  "editor.formatOnSave": true,
  "search.exclude": {
    "**/*.code-search": true,
    "**/.git": true,
    "**/thirdparty": true
  },
  "files.exclude": {
    "vcpkg_installed/": true,
    "vcpkg-manifest-install.log": true
  },
  "cmake.preferredGenerators": ["Ninja"],
  "files.associations": {
    "*.glsl": "c",
    "xstring": "cpp",
    "vector": "cpp",
    "any": "cpp",
    "array": "cpp",
    "compare": "cpp",
    "filesystem": "cpp",
    "format": "cpp",
    "functional": "cpp",
    "memory": "cpp",
    "ratio": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "variant": "cpp",
    "xmemory": "cpp",
    "xtr1common": "cpp",
    "xutility": "cpp",
    "unordered_map": "cpp",
    "istream": "cpp",
    "xlocmes": "cpp",
    "xlocmon": "cpp",
    "xlocnum": "cpp",
    "xloctime": "cpp"
  }
}
