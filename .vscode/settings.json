{
  // "cmake.configureArgs": ["-DCMAKE_EXPORT_COMPILE_COMMANDS:BOOL=TRUE"],
  "cmake.preferredGenerators": ["Ninja"],
  "cmake.debugConfig": {
    "args": [
      //
      // "--server",
      // "--server-port=27020",
      // "--headless"
    ]
  },

  // boom boom
  // parallel can cause issues with gcov/lcov
  "cmake.parallelJobs": 32,

  "editor.formatOnSave": true,
  "editor.showUnused": true,
  "editor.showDeprecated": true,
  "search.exclude": {
    "**/*.code-search": true,
    "**/.git": true,
    "**/thirdparty": true
  },
  "files.exclude": {
    "**/.vs": true,
    "**/.cache": true
  },
  "editor.bracketPairColorization.enabled": true,

  // "gcovViewer.highlightMissedLines": false,

  // linux settings
  "cmake.cmakePath": "/usr/bin/cmake",
  "C_Cpp.default.intelliSenseMode": "linux-gcc-x64",

  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.codeAnalysis.runAutomatically": true,
  "C_Cpp.codeAnalysis.clangTidy.enabled": true,
  "C_Cpp.codeAnalysis.clangTidy.checks.enabled": [
    "clang-analyzer-*",
    "cppcoreguidelines-*",
    "modernize-*",
    "performance-*",
    "portability-*",
    "readability-*",
    "clang-analyzer-security.insecureAPI.rand",
    "cppcoreguidelines-avoid-magic-numbers",
    "modernize-use-trailing-return-type",
    "readability-function-cognitive-complexity",
    "readability-magic-numbers"
  ],
  "C_Cpp.codeAnalysis.clangTidy.checks.disabled": [
    "readability-identifier-length",
    "readability-braces-around-statements",
    "readability-uppercase-literal-suffix",
    "modernize-use-trailing-return-type",
    "cppcoreguidelines-pro-type-union-access",
    "clang-analyzer-deadcode.DeadStores",
    "misc-unused-*"
  ]

  // "C_Cpp.codeAnalysis.clangTidy.useBuildPath": false
  // "editor.guides.bracketPairs": "active",
}
